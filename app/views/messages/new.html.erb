<h1>New Message</h1>

<%= turbo_frame_tag "new_message", target: "_top" do %>
  <%= form_with(model: [ @message.room, @message ],
                data: { controller: "form", action: "turbo:submit-end->form#reset" }) do |form| %>

    <div class="field">
      <%= form.label :content, nil, class: 'sr-only' %>
      <%= form.text_field :content, class: 'form-control mb-3', placeholder: 'Message', autofill: 'off', autocomplete: 'off' %>
      <%= form.submit "Send", class: 'btn btn-lg btn-primary btn-block' %>
    </div>
  <% end %>
<% end %>

<%= link_to 'Back', @message.room %>