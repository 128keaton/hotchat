
  <div class="modal fade" id="newRoomModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New Room</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <%= form_with(model: @room,
                      url: rooms_path,
                      class: 'form-room-new',
                      html: {
                        novalidate: true
                      },
                      data: {
                        remote: true,
                        controller: 'rooms',
                        target: 'form.form-room-new',
                        action: 'ajax:beforeSend->rooms#submitForm'
                      }) do |form| %>
          <div class="modal-body">

            <span class="form-error">Room name must be longer than 5 characters!</span>
            <%= form.label :name, nil, class: 'sr-only' %>
            <%= form.text_field :name, class: 'form-control mb-3', placeholder: 'Room Name', autofill: 'off', autocomplete: 'off', required: true %>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= button_tag "Create", class: 'btn btn-primary' %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
